a.bold(data-wysihtml5-command='bold',  title="Negrita") B
a.italic(data-wysihtml5-command='italic',  title="Cursiva") I
a(data-wysihtml5-command='createLink', title="Agregar enlace") link
a(data-wysihtml5-command='removeLink', title="Quitar link")
  s link
a(data-wysihtml5-command='formatBlock', data-wysihtml5-command-value='h1', title="Título h1") h1
a(data-wysihtml5-command='formatBlock', data-wysihtml5-command-value='h2', title="Título h2") h2
a(data-wysihtml5-command='formatBlock', data-wysihtml5-command-blank-value='true', title="Texto plano") plaintext
a(data-wysihtml5-command='insertUnorderedList', title="Lista desordenada") Ul
a(data-wysihtml5-command='insertOrderedList', title="Lista ordenada") Ol
a(data-wysihtml5-action='change_view', title="Ver código fuente") &lt;html /&gt;
a(data-wysihtml5-command='clearFormat', title="Quitar formato - Conveniente si pegaste texto desde algún otra fuente") Quitar Formato

div(data-wysihtml5-dialog='createLink', style='display: none;')
    label
      | Link:
      input(data-wysihtml5-dialog-field='href', value='http://')
    a(data-wysihtml5-dialog-action='save') OK
    a(data-wysihtml5-dialog-action='cancel') Cancel
div(data-wysihtml5-dialog='insertImage', style='display: none;')
      label
        | Image:
        input(data-wysihtml5-dialog-field='src', value='http://')
      label
        | Align:
        select(data-wysihtml5-dialog-field='className')
          option(value='') default
          option(value='wysiwyg-float-left') left
          option(value='wysiwyg-float-right') right
      a(data-wysihtml5-dialog-action='save') OK
        a(data-wysihtml5-dialog-action='cancel') Cancel
